@model IEnumerable<DataObjects.Project>

@{
    ViewBag.Title = "MyProjects";


}

<h2>My Projects</h2>

<table class="table">
    @if (ViewBag.Message != null)
    {
        @: @ViewBag.Message
    }

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </th>
        <th></th>
    </tr>
    @if (Model == null)
    {
        @: You Don't Have any Assigned Projects.
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectDescription)
                </td>
                <td>
                    @Html.ActionLink("Mark Complete", "FinishProject", new { ProjectID = item.ProjectID })
                </td>
            </tr>
        }
    }



</table>
