@model IEnumerable<DataObjects.ProjectViewModel>

<h2>All Projects</h2>

<p>
    @Html.ActionLink("Create New", "Create") | 
    @Html.ActionLink("Add New Project Type", "CreateProjectName");
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paid)
        </td>
        <td>
            @{ var startDate = item.StartDate.ToShortDateString(); }

            @Html.DisplayFor(modelItem => startDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ProjectID })
        </td>
    </tr>
}

</table>
